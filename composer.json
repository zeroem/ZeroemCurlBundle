{
    "name": "zeroem/curl-bundle",
    "type": "symfony-bundle",
    "description": "Allows you to easily create and execute HTTP Requests with cURL",
    "keywords": ["curl","httpkernel","http","symfony","bundle"],
    "license": "MIT",
    "authors": [
        {
            "name": "Darrell Hamilton",
            "email": "darrell.noice@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/http-foundation": ">=2.0.4, <=2.2.x-dev",
        "symfony/http-kernel": ">=2.0.4, <=2.2.x-dev",
        "symfony/event-dispatcher": ">=2.0.4, <=2.2.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7"
    },
    "autoload": {
        "psr-0": { "Zeroem\\CurlBundle": "" }
    },
    "target-dir": "Zeroem/CurlBundle"
}
